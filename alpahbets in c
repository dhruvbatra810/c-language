//count the words in a string in c by dhruv batra
#include <stdio.h>

int main()
{
    char a[20]="dhruv love ishita";
    int count =0;
    int lele=0;
    for(int i=0;a[i]!='\0';i++)
    {
        if(a[i]!=' ')
        {
        count++;
        if((a[i+1]==' '||a[i+1]=='\0')&&count>=2)
        {
            lele++;
            count=0;
        }
            
        }
        else
        count=0;

    }
    printf("%d",lele);
    
    return 0;
}
